<%- include("header.ejs")%>

<div class="row">
    <div class="col-lg-8">
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        Personal Opinion
      </h3>

      <article class="blog-post">
            <h2 class="display-5 link-body-emphasis mb-1"><%= book.author %></h2>
            <p class="blog-post-meta"><%= book.read_date %>, by <a href="<%= authorUrl %>"><%= book.author %></a></p>

            <p><b>Rate Number:</b> <%= book.rate_number %>/10 </p>
            <hr>
            <p><%= book.note %></p>
            <hr>
            <p><%= opinion %></p>
        </article>
    </div>
        
    <div class="col-md-4">
        <img src="<%= cover %>" alt="book-image" height="500px">
    </div>
</div>

<%- include("footer.ejs")%>

